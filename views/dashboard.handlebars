<div class="row">
  <div class="col-md-6">

    <h1 class="mb-4">Your Dashboard</h1>
    <a href="/newpost" class="btn btn-primary">+ New Post</a>
  </div>
</div>

<br>
<br>

<div>
  {{#each posts}}
  <div class="post-container post mb-3">
    <h2><a href="/post/{{id}}" class="text-decoration-none text-reset">{{title}}</a></h2>
    <p>Posted by {{user.username}} on {{format_date createdAt}}</p>
    <a href="/editpost/{{id}}" class="btn btn-warning">Edit Post</a>
    <button class="btn btn-danger delete-post" data-post-id="{{id}}">Delete</button>
  </div>
  {{/each}}
</div>

<script src="/js/delete.js"></script>