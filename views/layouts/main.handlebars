<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tech Blog</title>
  <!-- Include Bootstrap CSS from a CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <!-- Include custom CSS files -->
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <!-- Main layout structure -->
  <div class="flex-column justify-space-around">
    <!-- Header section -->
    <header id="header"="display-flex justify-space-between align-center p-2">
      <nav>
        <a href="/" id="navbar" class="mr-3">Home</a>
        <a href="/dashboard" id="navbar" class="mr-3">Dashboard</a>
        {{#if logged_in}}
        <button class="no-button" id="logout">Logout</button>
        {{else}}
        <a href="/login" id="navbar" class="mr-3">Login</a>
        {{/if}}
        <h1 id="title" class="shadow p-3 mb-5 bg-body-tertiary rounded">The Tech Blog</h1>
      </nav>
    </header>

    <!-- Main content area -->
    <main class="container container-fluid mt-5">
      {{{ body }}}
    </main>
  </div>

  <!-- Include logout script if user is logged in -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

  <!-- Include jQuery, Popper.js, and Bootstrap JS from CDNs -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
    integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
    crossorigin="anonymous"></script>

</body>

</html>